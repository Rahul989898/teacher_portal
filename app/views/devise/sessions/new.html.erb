<h2 class="text-center my-4 font-weight-bold">Log in</h2>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-container' }) do |f| %>
            <div class="form-group">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Enter your email" %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: 'form-label' %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: "Enter your password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group form-check">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, class: 'form-check-label' %>
              </div>
            <% end %>

            <div class="text-center">
              <%= f.submit "Log in", class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style type="text/css">
  body {
  background-color: #f8f9fa; /* Light background for better contrast */
  font-family: Arial, sans-serif; /* Clean font */
}

h2 {
  font-weight: bold; /* Bold title for emphasis */
}

.card {
  border-radius: 10px; /* Rounded corners for card */
}

.form-container {
  padding: 2rem; /* Padding inside the form */
}

.btn {
  font-weight: bold; /* Bold text for button */
}

.form-check-label {
  margin-left: 8px; /* Space between checkbox and label */
}

/* Optional: Add some transition effects */
.btn {
  transition: background-color 0.3s;
}

.btn:hover {
  background-color: #0056b3; /* Darker shade on hover */
}

</style>