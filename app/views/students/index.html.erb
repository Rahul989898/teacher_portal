<h1>Student Listing</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Subject</th>
      <th>Marks</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.subject.name if student.subject %></td>
        <td><%= student.marks %></td>
        <td>
          <%= link_to 'Show', student_path(student) %>
          <%= link_to 'Edit', edit_student_path(student) %>
          <%= link_to 'Delete', student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Student', new_student_path %>
